# Sample environment variables for OAuth configuration
# Copy this file to .env.dev and fill in your values

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_AUTH_ENDPOINT=https://accounts.google.com/o/oauth2/v2/auth
GOOGLE_TOKEN_ENDPOINT=https://oauth2.googleapis.com/token
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/oauth/google/callback
GOOGLE_SCOPES=openid email profile

# OAuth Settings
OAUTH_ENABLED=true
OAUTH_ALLOWED_REDIRECT_TO_PREFIXES=/,/app,/settings

# JWT Configuration (existing)
JWT_EXPIRES_IN=3600
